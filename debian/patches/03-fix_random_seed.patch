@@ -27,6 +27,8 @@
 #include <config.h>
 #endif
 
+#include <sys/time.h>
+#include <sys/types.h>
 #include <time.h>
 #include <stdio.h>
 #include <getopt.h>
@@ -175,7 +177,12 @@ main (int argc, char *argv[])
 	device_name = argv[optind];
 	
 	
-	srandom(time(NULL));
+	struct timeval tv;
+	if (gettimeofday(&tv, NULL) == 0) {
+		srandom(tv.tv_sec * tv.tv_usec * getpid());
+	} else {
+		srandom(time(NULL));
+	}
 
